<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:background="@drawable/music"
    android:orientation="vertical"
    tools:context=".allSongs">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout1"
    >

    <ImageView
        android:id="@+id/allSongs"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/allsongs"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/allSongs"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text= "All Songs List"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/song1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp"
        android:text= "Rolex - Ayo and Teo"
        android:textSize="25sp"
        android:textColor="#990000"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/song2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Mustang - Jimmy"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/song1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/song3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ek Raat - Villen"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/song2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/song4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bentley - Jass"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/song3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/song5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prada - Jass"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/song4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/song6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="God's Plan - Drake"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/song5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/song7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Pilots - Stresed Out"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/song6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/song8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khalid - Young Dumb and Broke"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/song7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    </RelativeLayout>
</ScrollView>