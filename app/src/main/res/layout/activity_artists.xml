<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".artists">

    <TextView
        android:id="@+id/allSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text= "All Songs List"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/artist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allSongs"
        android:layout_marginTop="15dp"
        android:text= "Ayo and Teo"
        android:textSize="25sp"
        android:textColor="#990000"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/artist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Jass"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/artist1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/artist3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drake"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/artist2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/artist4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Villen"
        android:textSize="25sp"
        android:textColor="#990000"
        android:layout_below="@+id/artist3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/artist5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jimmy"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/artist4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/artist6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stressed Out"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/artist5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/artist7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Young Dumb and Broke"
        android:textColor="#990000"
        android:textSize="25sp"
        android:layout_below="@+id/artist6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />


</RelativeLayout>